import subprocess

# ==== Configuration ====
input_fasta = "pseudomonas_aeruginosa_50000.fasta"
output_prefix = "rgi_pseudomonas_aeruginosa_50000"
threads = 8  # Adjust if needed

# ==== RGI Command ====
cmd = [
    "rgi", "main",
    "-i", input_fasta,
    "-o", output_prefix,
    "-t", "contig",
    "--clean",
    "-n", str(threads),
    "--local"
]

print(f"🚀 Running RGI on {input_fasta}...")

try:
    subprocess.run(cmd, check=True)
    print("✅ RGI analysis completed successfully.")
except subprocess.CalledProcessError as e:
    print(f"❌ RGI failed: {e}")
